    <UseWindowsForms>True</UseWindowsForms>
    <StartupObject>WPF_Encrypted_Notebook.App</StartupObject>
    <ApplicationIcon>Resources\Notebook.ico</ApplicationIcon>
    <RunPostBuildEvent>OnBuildSuccess</RunPostBuildEvent>
